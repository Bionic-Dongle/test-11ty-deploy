<section class="categories" id="categories">
  <div class="container">
    <div class="section-header">
      <p class="section-tag">{{ siteContent.categories.title }}</p>
      <h2 class="section-title">{{ siteContent.categories.subtitle }}</h2>
    </div>
    <div class="categories-grid">
      {% for item in siteContent.categories.items %}
        <div class="category-card">
          <img src="{{ item.image }}" alt="{{ item.title }}" class="category-image">
          <h3 class="category-title">{{ item.title }}</h3>
          <p class="category-description">{{ item.description }}</p>
          <a href="{{ item.link }}" class="category-link">Learn more â†’</a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>